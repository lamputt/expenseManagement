<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:background="@color/background_button"
    android:id="@+id/CreateBudget"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.CreateBudgetActivity">

    <LinearLayout
        android:layout_marginTop="16dp"
        android:layout_marginHorizontal="16dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >
        <ImageView
            android:id="@+id/backArrowCreateBudget"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/arrow_back_white"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingStart="105dp"
            android:text="Create Budget"
            android:textColor="@color/white"
            android:textSize="18sp"
            android:textStyle="bold" />
    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:textColor="@color/background_bottom_bar"
        android:text="@string/how_much_do_yo_want_to_spend"
        android:layout_marginTop="320dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_height="wrap_content">
        <EditText
            android:textColor="@color/white"
            android:id="@+id/et_amountBudget"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="@string/_0"
            android:textColorHint="@color/white"
            android:inputType="number"
            android:textSize="66sp"
            android:textStyle="bold"
            android:gravity="end"
            android:background="@null"
            android:paddingStart="20dp"
            android:focusableInTouchMode="true" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/d"
            android:textSize="64sp"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:paddingStart="4dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_marginTop="15dp"
        android:background="@drawable/dialog_bg"
        >

        <EditText
            android:id="@+id/edtSelectCategoryBudget"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:layout_marginTop="16dp"
            android:background="@drawable/rounded_edittext"
            android:clickable="true"
            android:drawableRight="@drawable/ic_dropdown"
            android:focusable="false"
            android:gravity="center_vertical"
            android:hint="@string/select_category"
            android:padding="12dp"
            android:textColor="@color/color_text"
            android:textSize="16sp" />

        <Button
            android:id="@+id/btnContinueCreateBudget"
            android:layout_marginTop="16dp"
            android:backgroundTint="@color/background_button"
            android:layout_width="match_parent"
            android:text="@string/txtContinue"
            android:textStyle="bold"
            android:textSize="18dp"
            android:layout_height="60dp"/>
    </LinearLayout>

</LinearLayout>
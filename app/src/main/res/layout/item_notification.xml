<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_marginTop="20dp"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:background="@drawable/border_category_budget"
    android:layout_height="wrap_content">

    <ImageView
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@drawable/notification_budget"
        />
    <TextView
        android:id="@+id/tvNameCategoryNotification"
        android:textStyle="bold"
        android:layout_marginLeft="5dp"
        android:layout_weight="2"
        android:text="Category"
        android:layout_gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="15sp"
        />
    <TextView
        android:textColor="@color/color_expense"
        android:layout_marginTop="16dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="13sp"
        android:textAlignment="textEnd"
        android:text="The category has exceeded budget"
        />
</LinearLayout>
<!-- res/layout/activity_otp_verification.xml -->
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#8A2BE2">

    <ImageView
        android:id="@+id/backArrowSignIn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_arrow_back"
        android:contentDescription="@string/back"
        android:layout_gravity="start"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:padding="8dp" />

    <TextView
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Enter Code"
        android:textStyle="bold"
        android:textSize="20sp"
        android:textAlignment="center"
        android:textColor="@color/white"
        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:layout_marginHorizontal="40dp"
        android:textAlignment="center"
        android:text="Enter the 4-digit code generated by Google authentication "
        android:textColor="@color/white"
        />
    <LinearLayout
        android:layout_marginTop="70dp"
        android:layout_marginHorizontal="55dp"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center">

        <EditText
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:layout_marginRight="20dp"
            android:id="@+id/otpBox1"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:inputType="number"
            android:maxLength="1"
            android:gravity="center"
            android:textSize="24sp"
            android:background="@drawable/otp_box_background" />

        <EditText
            android:layout_marginRight="20dp"
            android:id="@+id/otpBox2"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:inputType="number"
            android:maxLength="1"
            android:gravity="center"
            android:textSize="24sp"
            android:background="@drawable/otp_box_background" />

        <EditText
            android:layout_marginRight="20dp"
            android:id="@+id/otpBox3"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:inputType="number"
            android:maxLength="1"
            android:gravity="center"
            android:textSize="24sp"
            android:background="@drawable/otp_box_background" />

        <EditText
            android:id="@+id/otpBox4"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:inputType="number"
            android:maxLength="1"
            android:gravity="center"
            android:textSize="24sp"
            android:background="@drawable/otp_box_background" />
    </LinearLayout>

    <TextView
        android:id="@+id/tvResendOtp"
        android:layout_marginTop="40dp"
        android:layout_marginLeft="30dp"
        android:textSize="14sp"
        android:textColor="@color/white"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Haven't received the OTP?"
        android:clickable="true"
        android:focusable="true"
        />
    <Button
        android:id="@+id/btnContinue"
        android:layout_width= "match_parent"
        android:layout_height="55dp"
        android:text="Continue"
        android:textSize="18sp"
        android:textStyle="bold"
        android:layout_marginHorizontal="20dp"
        android:layout_marginTop="200dp" />
</LinearLayout>

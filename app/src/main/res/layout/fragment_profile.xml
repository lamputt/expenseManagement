<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:id="@+id/fragmentProfile"
    android:layout_height="match_parent"
    android:background="@color/background_profile"
    android:orientation="vertical"
    android:paddingHorizontal="20dp">

    <LinearLayout
        android:id="@+id/header_profile"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        android:background="@color/background_profile"
        android:orientation="horizontal">

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/imageuserView"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_marginTop="4dp"
            android:layout_weight="0"
            android:scaleType="centerCrop"
            android:src="@drawable/user_avatar"
            app:shapeAppearanceOverlay="@style/roundedImageView" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:orientation="vertical"
            android:paddingHorizontal="20dp"
            android:paddingTop="11dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/username"
                android:textAlignment="center"
                android:textColor="@color/text_description"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/tvUsername"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Iriana Saliha"
                android:textColor="@color/color_text"
                android:textSize="24sp"
                android:textStyle="bold" />

        </LinearLayout>

        <ImageView
            android:id="@+id/imgvEditProfile"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:layout_weight="1"
            android:src="@drawable/edit" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="445dp"
        android:layout_marginTop="40dp"
        android:orientation="vertical"
        android:background="@drawable/border_list_select_profile">
        
        <LinearLayout
            android:id="@+id/LnAccount"
            android:paddingTop="14dp"
            android:paddingStart="17dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="88dp"
            >
            <FrameLayout
                android:padding="15dp"
                android:background="@drawable/border_icon_profile"
                android:layout_width="52dp"
                android:layout_height="52dp">
                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/account_profile"/>
            </FrameLayout>
            <TextView
                android:layout_marginStart="10dp"
                android:layout_marginTop="14dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Account"
                android:textColor="@color/color_text"
                android:textSize="16sp"
                android:textStyle="bold"
                />
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="@color/background_profile"/>
        <LinearLayout
            android:id="@+id/LnSetting"
            android:paddingTop="14dp"
            android:paddingStart="17dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="88dp"
            >
            <FrameLayout
                android:padding="15dp"
                android:background="@drawable/border_icon_profile"
                android:layout_width="52dp"
                android:layout_height="52dp">
                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/settings_profile"/>
            </FrameLayout>
            <TextView
                android:layout_marginStart="10dp"
                android:layout_marginTop="14dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Settings"
                android:textColor="@color/color_text"
                android:textSize="16sp"
                android:textStyle="bold"
                />
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="@color/background_profile"/>
        <LinearLayout
            android:id="@+id/LnCategory"
            android:paddingTop="14dp"
            android:paddingStart="17dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="88dp"
            >
            <FrameLayout
                android:padding="15dp"
                android:background="@drawable/border_icon_profile"
                android:layout_width="52dp"
                android:layout_height="52dp">
                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/category_profile"/>
            </FrameLayout>
            <TextView
                android:layout_marginStart="10dp"
                android:layout_marginTop="14dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Category"
                android:textColor="@color/color_text"
                android:textSize="16sp"
                android:textStyle="bold"
                />
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="@color/background_profile"/>
        <LinearLayout
            android:id="@+id/LnExportData"
            android:paddingTop="14dp"
            android:paddingStart="17dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="88dp"
            >
            <FrameLayout
                android:padding="15dp"
                android:background="@drawable/border_icon_profile"
                android:layout_width="52dp"
                android:layout_height="52dp">
                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="20dp"
                    android:src="@drawable/export_file"/>
            </FrameLayout>
            <TextView
                android:layout_marginStart="10dp"
                android:layout_marginTop="14dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Export Data"
                android:textColor="@color/color_text"
                android:textSize="16sp"
                android:textStyle="bold"
                />
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="@color/background_profile"/>
        <LinearLayout
            android:id="@+id/LnLogout"
            android:paddingTop="14dp"
            android:paddingStart="17dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="88dp"
            >
            <FrameLayout
                android:padding="15dp"
                android:background="@drawable/border_logout_profile"
                android:layout_width="52dp"
                android:layout_height="52dp">
                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="20dp"
                    android:src="@drawable/logout"/>
            </FrameLayout>
            <TextView
                android:layout_marginStart="10dp"
                android:layout_marginTop="14dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Logout"
                android:textColor="@color/color_text"
                android:textSize="16sp"
                android:textStyle="bold"
                />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
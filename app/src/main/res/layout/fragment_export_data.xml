<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.Fragment_Export_Data">

    <ImageView
        android:id="@+id/backArrowSignIn"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="20dp"
        android:contentDescription="@string/back"
        android:src="@drawable/ic_arrow_back"
        android:textColor="@android:color/white"
        tools:context=".activity.SignUpActivity" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:gravity="center"
        android:text="@string/export_data"
        android:textColor="#000000"
        android:textSize="23sp"
        android:textStyle="bold" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="90dp"
        android:layout_marginLeft="20dp"
        android:text="@string/what_format_do_you_want_to_export"
        android:textColor="#000000"
        android:textSize="18sp"
        android:fontFamily="@font/inter_regular" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/rounded_border"
        android:orientation="horizontal"
        android:layout_marginTop="140dp"
        android:layout_marginLeft="10dp"
        android:padding="16dp"
        >

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="CSV"
            android:textColor="#000"
            android:textSize="20sp"
            android:fontFamily="@font/inter_regular"
            />

        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginLeft="278dp"
            android:src="@drawable/arrow_down_2"
            android:layout_marginTop="4dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="810dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:background="@drawable/border_expense"
        android:padding="16dp"
        android:gravity="center_vertical"> <!-- Căn giữa theo chiều dọc -->

        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/upload"
            android:layout_marginLeft="120dp"
            android:gravity="center_vertical"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Export"
            android:layout_marginLeft="10dp"
            android:textColor="#ffffff"
            android:textSize="27sp"
            android:fontFamily="@font/inter_regular"
        />

    </LinearLayout>



</FrameLayout>